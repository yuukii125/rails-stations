<h2>ご予約ページ</h2>
<%= form_with scope: :reservation, url: movie_schedule_reservations_path(@movie.id, @schedule.id) do |f| %>
  <%= f.hidden_field :date, value: @date %>
  <%= f.hidden_field :schedule_id, value: @schedule.id %>
  <%= f.hidden_field :sheet_id, value: @sheet.id %>
  <%= f.hidden_field :movie_id, value: @movie.id %>
  <table class="reservation_new" cellpadding="15">
    <tr>
      <td class="cell_title">映画タイトル</td>
    </tr>
    <tr>
      <td class="cell_info"><%= @movie.name %></td>
    </tr>
    <tr>
      <td class="cell_title">選択中の日時</td>
    </tr>
    <tr>
      <td class="cell_info">
      <%= @date %>
      <%= @schedule.start_time.strftime("%H:%M") %>
      <%= @schedule.end_time.strftime("%H:%M") %>
      </td>
    </tr>
    <tr>
      <td class="cell_title">選択中の座席</td>
    </tr>
    <tr>
      <td class="cell_info">
      <%= @sheet.row %> - <%= @sheet.column %>
      </td>
    </tr>
    <tr>
      <td class="cell_title">氏名</td>
    </tr>
    <tr>
      <td class="cell_info">
      <%= f.text_field :name, placeholder: "氏名を入力してください" %>
      </td>
    </tr>
    <tr>
      <td class="cell_title">メールアドレス</td>
    </tr>
    <tr>
      <td class="cell_info">
        <%= f.email_field :email, placeholder: "メールアドレスを入力してください" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.submit "予約する" %>
      </td>
    </tr>
  </table>
<% end %>

<%= link_to "座席予約ページへ戻る", movie_schedule_sheets_path(movie_id: @movie.id, schedule_id: @schedule.id, date: @date) %>
