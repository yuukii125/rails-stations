<table>
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>公開年</th>
    <th>概要</th>
    <th>画像URL</th>
    <th>上映中</th>
    <th>登録日時</th>
    <th>更新日時</th>
  </tr>
  <% @movies.each do |m| %>
    <tr>
      <td><%= m.id %></td>
      <td><%= m.name %></td>
      <td><%= m.year %></td>
      <td><%= m.description %></td>
      <td><%= link_to "画像", "#" %></td>
      <td>
        <% if m.is_showing == true %>
          上映中
        <% else %>
          上映予定
        <% end %>
      </td>
      <td><%= m.created_at %></td>
      <td><%= m.updated_at %></td>
    </tr>
  <% end %>
</table>